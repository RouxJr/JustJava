<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:visibility="visible">

    <CheckBox
        android:id="@+id/cbDevieName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CheckBox" />

    <LinearLayout
        android:id="@+id/loQtyDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"


        android:layout_below="@+id/cbDevieName"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tvQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Quatity"
            android:textAlignment="viewEnd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnAddQty"
            android:layout_width="49dp"
            android:layout_height="35dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:fadingEdge="horizontal|vertical"
            android:padding="1dp"
            android:text="+"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvTotalQty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="1"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnMinusQty"
            android:layout_width="45dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:text="-" />

        <EditText
            android:id="@+id/txtQty"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name" />

        <TextView
            android:id="@+id/tvQtyUnit"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="L"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>